# Basic
alias reload='. ~/.bashrc'
alias m="s"
alias m.="s ."
alias ll="ls -lhG"
alias lla="ls -lahG"
alias finder='open'
alias f='finder'
alias h='cd ~'
alias s='subl'
alias ducks='du -cksh * | sort -rn|head -11'
alias ip='curl whatismyip.org && echo'

# Directory shortcuts
alias web="cd ~/Sites"
alias dc="cd ~/Projects/ec/dynamiccreative"
alias dcc="dc && c"
alias projects="cd ~/Projects"
alias proj="projects"
alias p="projects"
alias show="setfile -a v"
alias hide="setfile -a V"

# Config file shortcuts
alias hosts="mate /private/etc/hosts"
alias httpd="mate /private/etc/apache2/httpd.conf"
alias vhosts="mate /private/etc/apache2/extra/httpd-vhosts.conf"

# Ruby/Rails
alias c="if [ -f 'script/console' ]; then script/console; else rails console; fi;"
alias cm="create_migration"
alias r='bx rake'
alias ra='create_ruby_app'
alias rg="rails_generate"
alias rr='r routes'
alias rrt='rr > routes.txt'
alias rt='r -T'
alias bx="bundle exec"
alias bi="bundle install && bundler_notify && restart"
alias bu="bundle update && bundler_notify && restart"
alias pca="RAILS_ENV=production bundle exec rake assets:precompile"
alias rbv="rvm-prompt v p g"
alias rsp="bundle exec rspec"
alias rspa="bundle exec rspec spec"
alias seed="r db:seed"
alias tlog="tail -f log/development.log"
alias restart="if [ -f 'tmp/restart.txt' ]; then touch tmp/restart.txt; fi;"
alias migrate="r db:migrate"
alias rollback="r db:rollback"
alias prepare="r db:test:prepare"
alias workers="QUEUE=* COUNT=5 r resque:workers"

# Git
alias ga="git add"
alias gac="git commit -a -v"
alias gall="git add -A"
alias gap="git add -p"
alias gau="git update-index --assume-unchanged"
alias gb="git branch"
alias gbl="git blame --date=short"
alias gc="git commit -v"
alias gca="gc --amend"
alias gch="git checkout"
alias gchm="gch master"
alias gchp="gch production"
alias gd="git diff | mate"
alias gdown='git pull upstream `current_branch`'
alias ged="git edit"
alias gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(magenta)%d%Creset %s %Cgreen(%cr) %C(yellow)<%an>%Creset' --abbrev-commit --date=relative"
alias gm="git merge"
alias gnau="git update-index --no-assume-unchanged"
alias gpull='git pull'
alias gpush='git push'
alias gr="git reset"
alias gs="git status -s -b"
alias gsh="git show"
alias gst="git stash"
alias gup='git push upstream `current_branch`'
alias add="gap"
alias blame="gbl"
alias branch="gb"
alias checkout="gch"
alias commit="gc"
alias log="gl"
alias ph="git push heroku master"
alias pp="gpull && gpush"
alias pull='git pull origin `current_branch`'
alias push='git push origin `current_branch`'
alias stash="gst"
alias status="gs"
